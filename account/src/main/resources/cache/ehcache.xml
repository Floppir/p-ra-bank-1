<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache alias="bankDetailsCache">
        <expiry>
            <ttl unit="days">365</ttl>
        </expiry>

        <resources>
            <heap>10</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <cache alias="profileCache">
        <expiry>
            <ttl unit="days">5</ttl>
        </expiry>

        <resources>
            <heap>10</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

</config>